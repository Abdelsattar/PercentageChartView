<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238">

    <com.ramijemli.percentagechartview.PercentageChartView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:pcv_animDuration="300"
        app:pcv_drawBackground="true"
        app:pcv_adaptiveBackground="false"
        app:pcv_adaptiveBackgroundRatio="60"
        app:pcv_adaptiveBackgroundMode="darker"
        app:pcv_adaptiveText="true"
        app:pcv_adaptiveTextRatio="50"
        app:pcv_adaptiveTextMode="lighter"
        app:pcv_animInterpolator="accelerate_decelerate"
        app:pcv_mode="pie"
        app:pcv_progress="10"
        app:pcv_progressColor="#FF0000"
        app:pcv_textColor="@android:color/white"
        app:pcv_startAngle="90"
        app:pcv_textSize="50sp"
        app:pcv_textStyle="bold"
        app:pcv_typeface="Interstellar.ttf" />

</FrameLayout>

