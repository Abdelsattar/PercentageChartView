<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="PercentageChartView">

        <!--COMMON ATTRIBUTES-->
        <attr name="pcv_mode" format="enum">
            <enum name="ring" value="0" />
            <enum name="pie" value="1" />
        </attr>
        <attr name="pcv_orientation" format="enum">
            <enum name="clockwise" value="0" />
            <enum name="counter_clockwise" value="1" />
        </attr>
        <attr name="pcv_startAngle" format="integer" />

        <attr name="pcv_drawBackground" format="boolean" />

        <attr name="pcv_progress" format="float" />
        <attr name="pcv_progressColor" format="color|reference" />

        <attr name="pcv_adaptiveColors" format="string" />
        <attr name="pcv_adaptiveDistribution" format="string" />

        <attr name="pcv_adaptiveBackground" format="boolean" />
        <attr name="pcv_adaptiveBackgroundRatio" format="integer" />
        <attr name="pcv_adaptiveBackgroundMode"  format="enum">
            <enum name="darker" value="0" />
            <enum name="lighter" value="1" />
        </attr>

        <attr name="pcv_adaptiveText" format="boolean" />
        <attr name="pcv_adaptiveTextRatio" format="integer" />
        <attr name="pcv_adaptiveTextMode"  format="enum">
            <enum name="darker" value="0" />
            <enum name="lighter" value="1" />
        </attr>

        <attr name="pcv_animDuration" format="integer" />
        <attr name="pcv_animInterpolator" format="enum">
            <enum name="linear" value="0" />
            <enum name="accelerate" value="1" />
            <enum name="decelerate" value="2" />
            <enum name="accelerate_decelerate" value="3" />
            <enum name="anticipate" value="4" />
            <enum name="overshoot" value="5" />
            <enum name="anticipate_overshoot" value="6" />
            <enum name="bounce" value="7" />
            <enum name="fast_out_linear_in" value="8" />
            <enum name="fast_out_slow_in" value="9" />
            <enum name="linear_out_slow_in" value="10" />
        </attr>

        <attr name="pcv_textColor" format="color|reference" />
        <attr name="pcv_textSize" format="dimension" />
        <attr name="pcv_typeface" format="string" />
        <attr name="pcv_textStyle">
            <flag name="normal" value="0" />
            <flag name="bold" value="1" />
            <flag name="italic" value="2" />
        </attr>

        <!--PIE MODE ATTRIBUTES-->
        <attr name="pcv_backgroundColor" format="color|reference" />

        <!--RING MODE ATTRIBUTES-->
        <attr name="pcv_backgroundBarWidth" format="dimension" />
        <attr name="pcv_backgroundBarColor" format="color|reference" />
        <attr name="pcv_backgroundFillColor" format="color|reference" />

        <attr name="pcv_progressBarWidth" format="dimension" />
        <attr name="pcv_progressBarStyle" format="enum">
            <enum name="round" value="0" />
            <enum name="square" value="1" />
        </attr>

    </declare-styleable>
</resources>