<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#263238">

    <!--app:pcv_adaptiveColors="#18FFFF, #F44336, #FFEB3B, #546E7A, #9C27B0, #4CAF50"-->
    <com.ramijemli.percentagechartview.PercentageChartView
        android:id="@+id/chart"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:pcv_animDuration="300"
        app:pcv_animInterpolator="accelerate_decelerate"
        app:pcv_adaptiveColors="#F44336, #29B6F6, #26A69A, #9C27B0"
        app:pcv_backgroundColor="#770FFFF0"
        app:pcv_drawBackground="true"
        app:pcv_adaptiveTextMode="lighter"
        app:pcv_adaptiveTextRatio="50"
        app:pcv_adaptiveBackground="true"
        app:pcv_adaptiveBackgroundMode="darker"
        app:pcv_adaptiveBackgroundRatio="60"
        app:pcv_mode="pie"
        app:pcv_orientation="clockwise"
        app:pcv_progress="0"
        app:pcv_startAngle="90"
        app:pcv_textSize="50sp"
        app:pcv_textStyle="bold"
        app:pcv_typeface="Interstellar.ttf" />

</FrameLayout>

